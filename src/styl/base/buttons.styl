.btn {
  relative();
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  border: vmin(2) solid transparent;
  font: vmin(18)/1 $font-base;
  padding: 1em;
  transform: translateZ(0);
  box-sizing: border-box;
  transition: all 0.3s;
  border-radius: vmin(10);

  {hover-focus-active} {
    text-decoration: none;
    outline: none;
  }

  &--block {
    display: block;
    width: 100%;
    max-width: 100vmin;
    margin: 0 auto;
  }

  &--big {
    font-size: 18px;
    line-height: 20px;
    font-weight: bold;
    min-width: 224px;

    @media $display-breakpoints.md-and-down {
      font-size: 14px;
      line-height: 18px;
      min-width: 186px;
    }
    @media $display-breakpoints.sm-and-down {
      font-size: vmin(14, 320);
      line-height: vmin(16, 320);
      padding: vmin(10, 320) vmin(20, 320);
      min-width: vmin(180, 320);
      border-width: vmin(2, 320);
    }
  }
  &--large {
    font-size: 18px;
    line-height: 20px;
    font-weight: bold;
    letter-spacing: 0.1em;
    padding: 20px;
    min-width: 260px;

    @media $display-breakpoints.sm-and-down {
      font-size: vmin(14, 320);
      line-height: vmin(16, 320);
      padding: 1em 1.5em;
      min-width: vmin(180, 320);
      letter-spacing: 0.02em;
      border-width: vmin(2, 320);
    }
  }
  &--plain {
    size(1em);
    background: transparent;
    padding: 0;
    min-width: 0;
    border: 0;
    border-radius: 0;
  }
  &--plain-link {
    background: transparent;
    padding: 0;
    min-width: 0;
    border: 0;
    border-bottom: 1px solid currentColor;
    padding-bottom: 2px;
    font: 500 10px/1 $font-base;
    letter-spacing: 0.01em;
    border-radius: 0;
  }

  &--square {
    size(vmin(50));
    font-size: vmin(40);
    padding: vmin(5);

    .icon {
      display: block;
    }
  }
  &--square&--small {
    size(vmin(36));
    font-size: vmin(26);
  }

  &--circle {
    circle(vmin(84));
    font-size: vmin(42);
    padding: vmin(20);

    .icon {
      display: block;
    }
  }

  // colors
  &--default {
    get-button-variant($white, $primary);
  }
  &--primary {
    get-button-variant($pink, $pink-pig);
  }
  &--default-outline {
    get-button-outline-variant($white, $primary);
  }
  &--white-outline {
    get-button-outline-variant($white, $pink-dark);
  }
  &--primary-outline {
    get-button-outline-variant($primary, $pink-light);
  }
}
