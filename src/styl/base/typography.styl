$text-color = $black;
$link-color = $text-color;
$link-color--active = 'inherit';

html, body {
  font-size: $font-size-base;
  line-height: 1.5;
  font-family: $font-base;
  color: $text-color;
}

a {
  color: $link-color;
  text-decoration: none;
  
  {focus-active} {
    color: $link-color--active;
    outline: 0;
  }
}

.link-back {
  font: 14px/1 $font-util;
  
  a {
    text-decoration: underline;
    color: $secondary;

    {active} {
      color: $primary;
    }
  }
}

.tp-heading {
  &--bb {
    font: bold vmin(30)/1.26 $font-base;
  }
  &--br {
    font: normal vmin(30)/1.26 $font-base;
  }
  &--sb {
    font: bold vmin(25)/1.2 $font-base;
  }
  &--sr {
    font: normal vmin(25)/1.2 $font-base;
  }
  &--xs {
    font: bold vmin(15)/1.2 $font-base;
  }
}
.tp-body {
  &--big {
    font: bold vmin(30)/1.26 $font-base;
  }
  &--medium-b {
    font: bold vmin(20)/1.3 $font-base;
  }
  &--medium {
    font: vmin(20)/1.3 $font-base;
  }
  &--base-b {
    font: bold vmin(18)/1.28 $font-base;
  }
  &--base {
    font: vmin(18)/1.28 $font-base;
  }
  &--small {
    font: vmin(16)/1.25 $font-base;
  }
  &--smaller {
    font: vmin(15)/1.2 $font-base;
  }
}
b, strong {
  font: inherit;
  font-weight: bold;
}
.tp-text {
  for $align in (left right center) {
    &--{$align} {
      text-align: $align;
    }
  }
  &--light {
    opacity: 0.8;
  }
  &--lighter {
    opacity: 0.6;
  }
  &--lightest {
    opacity: 0.5;
  }
  &--upper {
    text-transform: uppercase;
  }
  &--lower {
    text-transform: lowercase;
  }
  &--truncate {
    truncate();
  }
  &--nowrp {
    white-space: nowrap;
  }
}

p {
  margin: vmin(20) 0;
  no-childs-margin();
}

.primary {
  color: $primary;
}
.secondary {
  color: $secondary;
}

.pic {
  text-align: center;
  img {
    display: block;
    max-width: 100%;
    margin: 0 auto;
  }
}

.text-img {
  max-width: vmin(100);
  margin: vmin(20) auto;
  no-childs-margin();

  img {
    max-width: 100%;
  }

  &.align--center {
    text-align: center;
  }
}

.params {
  margin: vmin(20) 0;
  &__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
}

.video {
  margin: vmin(20) 0;
  .yt {
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
  }
  iframe {
    display: block;
    absolute(0%, 0%);
    size(100%);
  }
  .title {
    margin-top: vmin(8);
  }
}